<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>{{ fontName }}</title>

  <style>
    /* Page styling */
    :root {
      --color: rgba(221, 80, 64, 1);
      --color_alt_dark: rgba(61, 61, 60, 1);
      --color_alt_light: rgba(255, 255, 255, 1);
      --color_shadow: rgba(221, 80, 64, .5);
      --shadow_dark: rgba(61, 61, 60, .22);
      --shadow_light: rgba(61, 61, 60, .11);
    }

    body {
      margin: 0;
      padding: 10px 20px;
      background: #f3f3f3;
      color: #222;
      font-family: "Helvetica Neue", Arial, sans-serif;
    }

    h1 {
      margin: 10px 0 20px;
      font-size: 32px;
      font-weight: normal;
      text-align: center;
    }
    h1 span {
      padding: 0 10px;
      background: #f3f3f3;
      display: inline-block;
    }
    h1:after {
      border-bottom: 1px solid #b3b3b3;
      content: '';
      display: block;
      position: relative;
      top: -1rem;
      z-index: -1;
    }

    .container {
      margin: auto;
      width: 100%;
    }

    .icons {
      margin-bottom: 40px;
      margin-left: -10px;
      margin-right: -20px;
    }

    .{{ className }} {
      font-size: 7rem !important;
      margin-bottom: 1rem;
    }
    .{{ className }}-wrap {
      border-radius: 4px;
      box-shadow: 0 0 0 rgba(0,0,0,0);
      display: inline-block;
      height: 10rem;
      margin: 10px;
      overflow: hidden;
      text-align: center;
      transition: background 0.2s ease-out, box-shadow 0.3s ease-in-out;
      width: calc((100% - (4 * 20px)) / 2);
    }
    .{{ className }}-class {
      color: #b3b3b3;
      font-size: .675rem;
      padding: 10px;
      position: relative;
    }
    .{{ className }}-wrap:hover {
      background: #fff;
      box-shadow: 0 3px 10px 0 rgba(0,0,0,0.3);
      cursor: pointer;
    }
    .{{ className }}-wrap:hover .{{ className }}-class {
      background: #cecece;
      color: #939393;
    }
    .{{ className }}-wrap:hover .{{ className }}-class:after {
      background: #cecece;
      content: "</>";
      display: block;
      font-family: monospace;
      padding: 0 .25rem;
      position: absolute;
      right: 0;
      top: .675rem;
    }

    @media only screen and (min-width: 580px) {
      .container {
        width: 520px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (5 * 20px)) / 3);
      }
    }
    @media only screen and (min-width: 720px) {
      .container {
        width: 660px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (6 * 20px)) / 4);
      }
    }
    @media only screen and (min-width: 890px) {
      .container {
        width: 830px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (7 * 20px)) / 5);
      }
    }
    @media only screen and (min-width: 1000px) {
      .container {
        width: 940px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (7 * 20px)) / 5);
      }
    }
    @media only screen and (min-width: 1100px) {
      .container {
        width: 1040px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (8 * 20px)) / 6);
      }
    }
    @media only screen and (min-width: 1260px) {
      .container {
        width: 1200px;
      }
      .{{ className }}-wrap {
        width: calc((100% - (10 * 20px)) / 8);
      }
    }
  </style>

  <style>
    /* iconfont */
    @font-face {
      font-family: "{{ fontName }}";
      {%- set size = formats.length -%}
      {%- set currentSize = 0 -%}
      {% if 'eot' in formats -%}
      src: url("{{ fontPath }}{{ fontName }}.eot");
      {%- endif %}
      src: {%- if 'eot' in formats -%}
             url("{{ fontPath }}{{ fontName }}.eot?#iefix") format("embedded-opentype")
             {%- set currentSize = currentSize + 1 -%}
             {%- if currentSize != size -%}, {% else -%}; {% endif -%}
           {%- endif -%}
           {%- if 'woff2' in formats -%}
             url("{{ fontPath }}{{ fontName }}.woff2") format("woff2")
             {%- set currentSize = currentSize + 1 -%}
             {%- if currentSize != size -%}, {% else -%}; {% endif -%}
           {%- endif -%}
           {%- if 'woff' in formats -%}
             url("{{ fontPath }}{{ fontName }}.woff") format("woff")
             {%- set currentSize = currentSize + 1 -%}
             {%- if currentSize != size -%}, {% else -%}; {% endif -%}
           {%- endif -%}
           {%- if 'ttf' in formats -%}
             url("{{ fontPath }}{{ fontName }}.ttf") format("truetype")
             {%- set currentSize = currentSize + 1 -%}
             {%- if currentSize != size -%}, {% else -%}; {% endif -%}
           {%- endif -%}
           {%- if 'svg' in formats -%}
             url("{{ fontPath }}{{ fontName }}.svg#{{ fontName }}") format("svg")
             {%- set currentSize = currentSize + 1 -%}
             {%- if currentSize != size -%}, {% else -%}; {% endif -%}
           {%- endif %}
      font-style: normal;
      font-weight: 400;
    }

    {%- for glyph in glyphs -%}
      {%- set icon = glyph.name.split('___') -%}
      {% if icon[1] == 0 %}
      .{{ className }}-{{ icon[0] }}::before {
      {% elif icon[1] == 1 %}
      .{{ className }}-{{ icon[0] }} i::before {
      {% elif icon[1] == 2 %}
      .{{ className }}-{{ icon[0] }} i i::before {
      {% elif icon[1] == 3 %}
      .{{ className }}-{{ icon[0] }} i i::after {
      {% elif icon[1] == 4 %}
      .{{ className }}-{{ icon[0] }} i::after {
      {% else %}
      .{{ className }}-{{ icon[0] }}::after {
      {% endif %}  content: "\{{ glyph.unicode[0].charCodeAt(0).toString(16) }}";
        color: var(--{{ icon[2] }});
      }
    {%- endfor -%}

    .{{ className }} {
      display: inline-block;
      vertical-align: top;
      position: relative;
      display: inline-block;
      transform: translate(0, 0);
      text-rendering: auto;
      font-family: iconfont;
      font-weight: normal;
      font-style: normal;
      font-size: inherit;
      width: 1em;
      height: 1em;
      -moz-osx-font-smoothing: grayscale;
      -webkit-font-smoothing: antialiased;
    }

    .{{ className }}::before,
    .{{ className }}::after,
    .{{ className }} i::before,
    .{{ className }} i::after {
      font-style: normal;
      position: absolute;
      top: 0;
      left: 0;
      box-sizing: border-box;
      height: 1em;
      width: 1em;
      font-size: 1em;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1><span>{{ fontName }}</span></h1>
    <div class="icons" id="icons">
      {%- for glyph in glyphs -%}
      {%- set icon = glyph.name.split('___') -%}
      {% if icon[1] == 0 %}
        <div class="icon-wrap">
          <div>
            <i class="{{ className }} {{ className }}-{{ icon[0] }}"><i><i></i></i></i>
          </div>
          <div class="icon-class">{{ className }}-{{ icon[0] }}</div>
        </div>
      {% endif %}
      {%- endfor -%}
    </div>
  </div>

  <script>
    var wraps = document.getElementsByClassName("icon-wrap");

    for (var i = 0, length = wraps.length; i < length; i++) {
      wraps[i].addEventListener("click", function(element) {
        var code = element.currentTarget.firstElementChild.innerHTML;
        copyToClipboard(code.trim());
      });
    }

    function copyToClipboard(text) {
      window.prompt("Copy to clipboard", text);
    }
  </script>
</body>
</html>
