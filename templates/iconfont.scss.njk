@font-face {
  font-family: "{{ fontName }}";
  {%- set size = formats.length -%}
  {%- set currentSize = 0 -%}
  {% if 'eot' in formats -%}
  src: url("{{ fontPath }}{{ fontName }}.eot");
  {%- endif %}
  src: {%- if 'eot' in formats -%}
         url("{{ fontPath }}{{ fontName }}.eot?#iefix") format("embedded-opentype")
         {%- set currentSize = currentSize + 1 -%}
         {%- if currentSize != size -%}, {% else -%}; {% endif -%}
       {%- endif -%}
       {%- if 'woff2' in formats -%}
         url("{{ fontPath }}{{ fontName }}.woff2") format("woff2")
         {%- set currentSize = currentSize + 1 -%}
         {%- if currentSize != size -%}, {% else -%}; {% endif -%}
       {%- endif -%}
       {%- if 'woff' in formats -%}
         url("{{ fontPath }}{{ fontName }}.woff") format("woff")
         {%- set currentSize = currentSize + 1 -%}
         {%- if currentSize != size -%}, {% else -%}; {% endif -%}
       {%- endif -%}
       {%- if 'ttf' in formats -%}
         url("{{ fontPath }}{{ fontName }}.ttf") format("truetype")
         {%- set currentSize = currentSize + 1 -%}
         {%- if currentSize != size -%}, {% else -%}; {% endif -%}
       {%- endif -%}
       {%- if 'svg' in formats -%}
         url("{{ fontPath }}{{ fontName }}.svg#{{ fontName }}") format("svg")
         {%- set currentSize = currentSize + 1 -%}
         {%- if currentSize != size -%}, {% else -%}; {% endif -%}
       {%- endif %}
  font-style: normal;
  font-weight: 400;
}

.{{ className }} {
  display: inline-block;
  display: inline-block;
  font-family: iconfont;
  font-size: inherit;
  font-style: normal;
  font-weight: normal;
  height: 1em;
  position: relative;
  text-rendering: auto;
  transform: translate(0, 0);
  vertical-align: top;
  width: 1em;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;

  &::before,
  &::after,
  i::before,
  i::after {
    box-sizing: border-box;
    font-size: 1em;
    font-style: normal;
    height: 1em;
    left: 0;
    position: absolute;
    top: 0;
    width: 1em;
  }
}

{%- for glyph in glyphs -%}
{%- set icon = glyph.name.split('___') -%}
{% if icon[1] == 0 %}
.{{ className }}-{{ icon[0] }}::before {
{% elif icon[1] == 1 %}
.{{ className }}-{{ icon[0] }} i::before {
{% elif icon[1] == 2 %}
.{{ className }}-{{ icon[0] }} i i::before {
{% elif icon[1] == 3 %}
.{{ className }}-{{ icon[0] }} i i::after {
{% elif icon[1] == 4 %}
.{{ className }}-{{ icon[0] }} i::after {
{% else %}
.{{ className }}-{{ icon[0] }}::after {
{% endif %}  content: "\{{ glyph.unicode[0].charCodeAt(0).toString(16) }}";
  color: var(--{{ icon[2] }});
}
{%- endfor -%}
